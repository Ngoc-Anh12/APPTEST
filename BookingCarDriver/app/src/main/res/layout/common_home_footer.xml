<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_home_footer"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fl_footer_home"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_home_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_home_24"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_footer_search"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_search_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_search_24"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_footer_notification"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/img_notification_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_notifications_24"/>
                    <TextView
                        android:id="@+id/txt_badge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_toRightOf="@id/img_notification_ic"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white"
                        android:background="@drawable/icon_badge"
                        android:layout_marginLeft="-5dp"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_footer_setting"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_setting_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_person_24"/>
            </FrameLayout>
        </LinearLayout>

</layout>
